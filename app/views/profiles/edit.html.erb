<div class="form-horizontal">
  <%= form_for @user, url: profiles_path do |f| %>
    <%= field_set_tag t(".title") do %>
      <div class="form-group">
        <%= f.label :email, class: "control-label col-md-2" %>
        <div class="controls col-md-10">
          <%= f.email_field :email, class: "form-control", disabled: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :first_name, class: "control-label col-md-2" %>
        <div class="controls col-md-4">
          <%= f.text_field :first_name, class: "form-control", required: true %>
        </div>
        <%= f.label :last_name, class: "control-label col-md-2" %>
        <div class="controls col-md-4">
          <%= f.text_field :last_name, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :sex, class: "control-label col-md-2" %>
        <div class="controls col-md-2">
          <%= f.text_field :sex, class: "form-control", required: true %>
        </div>
        <%= f.label :date_of_birth, class: "control-label col-md-2" %>
        <div class="controls col-md-2">
          <%= f.date_field :date_of_birth, class: "form-control", required: true %>
        </div>
        <%= f.label :phone_number, class: "control-label col-md-2" %>
        <div class="controls col-md-2">
          <%= f.telephone_field :phone_number, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :website, class: "control-label col-md-2" %>
        <div class="controls col-md-10">
          <%= f.text_field :website, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, class: "control-label col-md-2" %>
        <div class="controls col-md-10">
          <%= f.text_area :address, class: "form-control", required: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="controls col-md-10 col-md-offset-2">
          <%= f.submit t(".submit"), class: "btn btn-success" %>
          <%= link_to t(".back"), :back, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
