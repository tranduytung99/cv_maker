<%= form_for resource, as: resource_name, url: registration_path(resource_name),
  html: {class: "form-horizontal", method: :put} do |f| %>
  <%= field_set_tag  t(".title") do %>
    <% if !resource.errors.empty? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.email_field :email, class: "form-control" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="help-block">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.password_field :current_password, autocomplete: "off",
          class: "form-control", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, t(".new_pwd"), class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control" %>
        <% if @minimum_password_length %>
        <p class="help-block">
          <%= @minimum_password_length.to_s + t(".pwd_minimum") %>
        </p>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls col-md-10 col-md-offset-2">
        <%= f.submit t(".submit"), class: "btn btn-success" %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls col-md-10 col-md-offset-2">
        <%= link_to t(".cancel_account"),
          registration_path(resource_name),
          data: { confirm: t(".confirm_msg") }, method: :delete,
          class: "btn btn-danger" %>
        <%= link_to "Back", :back, class: "btn btn-primary" %>
      </div>
    </div>

  <% end %>
<% end %>
