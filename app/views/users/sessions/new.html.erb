<%= form_for resource, as: resource_name, url: session_path(resource_name),
  html: {class: "form-horizontal"} do |f| %>

  <%= field_set_tag  t(".title") do %>
    <% if !resource.errors.empty? %>
      <div class="alert alert-danger">
        <%= devise_error_messages! %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-md-2" %>
      <div class="controls col-md-10">
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="controls col-md-offset-2 col-md-10">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="controls col-md-offset-2 col-md-10">
        <%= f.submit t(".submit"), class: "btn btn-success" %>

        <%= link_to t(".sign_up"),
          new_registration_path(resource_name),
          class: "btn btn-primary" %>
      </div>
    </div>

    <div class="form-group">
      <div class="controls col-md-offset-2 col-md-10">
        <%= link_to t(".forgot_pwd"), new_password_path(resource_name) %>
      </div>
    </div>

  <% end %>
<% end %>
